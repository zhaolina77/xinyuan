@import'/css/aui.wxss';
@import'/css/common.wxss';
@import'/css/global.wxss';
.flex{display: flex;justify-content:space-between;align-items: center;}
.search{height: 70rpx;border-radius: 6rpx;}
.search_box{width: 260rpx;margin: 0 auto;line-height: 70rpx;}
.icon image{width: 20rpx;height: 20rpx;}
.inp{height: 70rpx !important;line-height: 70rpx;text-indent: 30rpx;}

.fl_box{width: 26%;}
.fl_pic{width: 70rpx;height: 70rpx;margin: 0 auto;}
.fl_pic image{width: 100%;height: 100%;}
.content{overflow: hidden;}
.aui-col-xs-3{width: 23%;height: 165rpx;position: relative;left:0;top: 0;margin-right:2.6% ;margin-top: 20rpx;}
.aui-col-xs-3:nth-of-type(4n){margin-right: 0 !important;}
.pic{width: 100%;height: 100%;overflow: hidden;position: absolute;top: 0;left: 0;z-index: 1;}
.pic image{width: 100%;height: 100%;}
.shang{width: 100%;height: 100%;background-color: rgba(0, 0, 0, 0.7);position: absolute;top: 0;left: 0;z-index: 2;}
.txt{width: 100%;line-height: 165rpx;position: absolute;top: 0;left: 0;z-index: 3;}
.head{width: 80rpx;height:80rpx;border-radius: 50%;overflow: hidden;}
.head image{width: 100%;height:100%;}
.rig{width: 90%;}
.rig_ico{width: 48rpx;height: 48rpx;}
.rig_ico image{width:24rpx;height: 24rpx;}
input{text-align: left;}

.disblock{display: block;}
.disnone{display: none;}


.banner{
  height:260rpx;
  position: relative;
  background-color: #F5F6FA;
  border-radius: 10rpx;
  overflow: hidden;
}
.banner swiper{
  height:260rpx;
  position: relative;
}
.banner swiper-item navigator{height: 260rpx;}
.banner swiper-item navigator image{
  width: 100%;
  height: 100%
}
.supplierList:last-child .shangmao .aui-border-b{border-color: #fff !important;}
.middle{width:87% ;}
.zx_pic{width: 8%;}
.zx_txt{width: 92%;}
.zx_pic image{width: 40rpx;height: 40rpx;}
.zx{width:44rpx;height: 28rpx;border-radius: 6rpx;line-height: 28rpx;}
.zixun_banner{width:100%;height: 30rpx;line-height: 30rpx;}
