.aui-col-xs-4{width: 31%;margin-right: 2%;margin-bottom:20rpx;}
.aui-col-xs-4:last-child{margin-right: 0;}
.classfy_pic{width: 100%;height:130rpx;}
.classfy_pic image{width: 100%;height: 100%;}


/* 无数据 */
.nodata{width:80%;height: 500rpx;margin: 240rpx auto;}
.nodata image{width: 100%;height: 100%;}